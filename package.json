{
  "name": "dhis2-store",
  "version": "1.0.0",
  "description": "The DHIS2 Store front for installable DHIS2 packages.",
  "main": "index.js",
  "repository": "git@github.com:dhis2/dhis2-appstore.git",
  "author": "Viktor Varland <viktor@dhis2.org>",
  "license": "BSD-3-Clause",
  "private": true,
  "workspaces": [
    "server", "client"
  ],
  "devDependencies": {
    "@dhis2/cli-style": "^3.3.4",
    "husky": "^2.5.0"
  },
  "scripts": {
    "build:client": "cd client && yarn build",
    "start": "yarn build:client && cd server && yarn start"
  },
  "husky": {
    "hooks": {
      "commit-msg": "d2-style commit check",
      "pre-commit": "d2-style js apply"
    }
  }
}
